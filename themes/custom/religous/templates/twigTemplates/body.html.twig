{% if block('body') is not empty or body|raw is not empty %}
    {% if gray %}
        <div class="gray">
    {% endif %}

    {% if green %}
        <div class="green">
    {% endif %}


    <div
        {% if id %}
            id= {{ id }}
        {% endif %}
        class="content">
        {% if show_title %}
            <h1 class="title">
                {% if title_name %}
                    {{ title_name | t }}
                {% endif %}
                {% if title_value %}
                    {{ title_value }}
                {% endif %}
            </h1>
        {% endif %}
        <div class="vbody readmore {{ body_class }}">
            {% autoescape %}
                {% if body %}
                    {{ body|raw }}
                {% endif %}
                {% block body %}{% endblock %}
            {% endautoescape %}
        </div>
    </div>

    {% if gray %}
        </div>
    {% endif %}
    {% if green %}
        </div>
    {% endif %}
{% endif %}
